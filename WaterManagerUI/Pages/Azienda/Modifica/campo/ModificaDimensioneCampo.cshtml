@page
@model WaterManagerUI.Pages.Modifica.campo.ModificaDimensioneCampo

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Modifica dimensione campo</h2>
            <form method="post">
                <div class="form-group">
                    <p>Dimensione corrente: @Model.campo.dimensione (ha)</p>
                    <label asp-for="dimNew">Nuova dimensione campo</label>
                    <input asp-for="dimNew" type="number" step="0.5" class="form-control"/>
                    <span asp-validation-for="dimNew" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Modifica dimensione</button>
                </div>
            </form>
        </div>
    </div>
</div>