{
	"openapi": "3.0.0",
	"info": {
		"title": "API di Autenticazione",
		"version": "1.0.0"
	},
	"servers": [
		{
			"url": "http://localhost:8080/api/v1",
			"description": "Server di sviluppo locale per servizi di autenticazione"
		}
	],
	"paths": {
		"/auth/login": {
			"post": {
				"summary": "Login utente",
				"responses": {
					"200": {
						"description": "Login riuscito"
					},
					"401": {
						"description": "Credenziali non valide"
					}
				}
			}
		},
		"/auth/register": {
			"post": {
				"summary": "Registrazione nuovo utente",
				"responses": {
					"200": {
						"description": "Registrazione riuscita"
					},
					"400": {
						"description": "Richiesta non valida"
					}
				}
			}
		},
		"/auth/login/oauth2/code/github": {
			"get": {
				"summary": "Callback per autenticazione GitHub OAuth2",
				"responses": {
					"200": {
						"description": "Autenticazione GitHub riuscita"
					},
					"401": {
						"description": "Autenticazione GitHub non riuscita"
					}
				}
			}
		},
		"/auth/oauth2/authorization/github": {
			"get": {
				"summary": "Inizia il processo di autenticazione OAuth2 con GitHub",
				"responses": {
					"302": {
						"description": "Reindirizzamento alla pagina di autenticazione di GitHub"
					}
				}
			}
		},
		"/auth/verify/mail/{email}": {
			"get": {
				"summary": "Verifica dell'esistenza di una mail",
				"parameters": [
					{
						"name": "email",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string",
							"format": "email"
						},
						"description": "Indirizzo email da verificare"
					}
				],
				"responses": {
					"200": {
						"description": "Email esistente/non esistente"
					}
				}
			}
		},
		"/auth/verify/username/{username}": {
			"get": {
				"summary": "Verifica dell'esistenza di un nome utente",
				"parameters": [
					{
						"name": "username",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						},
						"description": "Nome utente da verificare"
					}
				],
				"responses": {
					"200": {
						"description": "Nome utente esistente/non esistente"
					}
				}
			}
		}
	}
}
