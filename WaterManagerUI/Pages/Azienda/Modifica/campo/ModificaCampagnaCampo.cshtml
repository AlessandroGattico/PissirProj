@page
@using WaterManagerUI.Model.Item
@model WaterManagerUI.Pages.Modifica.campo.ModificaCampagnaCampo

<link rel="stylesheet" href="~/css/site.css"/>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Modifica campagna campo</h2>
            <form method="post" asp-page-handler="addAzienda">
                <div class="form-group">
                    <label asp-for="campagnaNew">Campagna</label>
                    <select asp-for="campagnaNew" class="form-control">
                        @foreach (Campagna element in Model.campagne)
                        {
                            <option value="@element.id">@element.nome</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-button">Modifica campagna</button>
                </div>
            </form>
        </div>
    </div>
</div>