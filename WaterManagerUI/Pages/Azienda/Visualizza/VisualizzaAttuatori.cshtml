@page
@using WaterManagerUI.Model.Item
@model WaterManagerUI.Pages.VisualizzaAttuatori

<link rel="stylesheet" href="~/css/Visualizza.css"/>

<div class="container">
    <div class="row">
        <div class="col-md-2">
            <aside class="flex-container">
                <span>
                    <ul>
                        <li>
                            <a href="/Azienda/GestoreAzienda">Statistiche Azienda</a>
                        </li>
                        <li>
                            <a href="/Azienda/Visualizza/VisualizzaCampi">Campi</a>
                        </li>
                        <li>
                            <a href="/Azienda/Visualizza/Coltivazioni">Coltivazioni</a>
                        </li>
                        <li>
                            <a href="/Azienda/Visualizza/Richiesta">Richieste</a>
                        </li>

                    </ul>
                </span>
            </aside>
        </div>

        <div class="col-md-8">
            <div class="elements">
                @if (Model.campo.attuatori.Count > 0)
                {
                    @foreach (Attuatore attuatore in Model.campo.attuatori)
                    {
                        <div class="elemento" onclick="this.parentNode.submit()">
                            <a asp-page="/Azienda/Visualizza/VisualizzaAttuatore" asp-route-campoId="@attuatore.id">
                                <div class="info-elemento nome">Nome: @attuatore.nome</div>
                                @if (attuatore.storicoAttivazioni().Any())
                                {
                                    <div class="info-elemento coltivazioni">Stato corrente: @attuatore.storicoAttivazioni().FirstOrDefault().current</div>
                                }
                                else
                                {
                                    <div class="info-elemento coltivazioni">Stato corrente: false</div>
                                }
                            </a>
                        </div>
                    }

                    <div class="bottone-aggiungi">
                        <a asp-page="/Azienda/Crea/CreaAttuatore" asp-route-campoId="@Model.campo.id" class="plus-icon">+</a>
                        <a asp-page="/Azienda/Crea/CreaAttuatore" asp-route-campoId="@Model.campo.id">Aggiungi attuatore</a>
                    </div>
                }
                else
                {
                    <div class="bottone-aggiungi">
                        <a asp-page="/Azienda/Crea/CreaAttuatore" asp-route-campoId="@Model.campo.id" class="plus-icon">+</a>
                        <a asp-page="/Azienda/Crea/CreaAttuatore" asp-route-campoId="@Model.campo.id">Aggiungi attuatore</a>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-2">
        </div>
    </div>
</div>