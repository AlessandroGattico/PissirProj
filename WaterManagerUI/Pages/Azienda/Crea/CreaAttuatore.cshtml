@page
@model WaterManagerUI.Pages.CreaAttuatore

<link rel="stylesheet" href="~/css/form.css"/>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Crea campo</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="attuatore.nome">Nome campo</label>
                    <input asp-for="attuatore.nome" class="form-control"/>
                    <span asp-validation-for="attuatore.nome" class="text-danger"></span>
                </div>
                <div>
                    <input type="submit" value="Crea campo" class="btn btn-primary form-button"/>
                </div>
            </form>
        </div>
    </div>
</div>