@page
@using WaterManagerUI.Model.Item
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WaterManagerUI.Pages.VisualizzaColtivazioni

<link rel="stylesheet" href="~/css/Visualizza.css"/>

<div class="container">
    <div class="row">
        <div class="col-md-2">
            <aside class="flex-container">
                <span>
                    <ul>
                        <li>
                            <a href="/Azienda/GestoreAzienda">Statistiche Azienda</a>
                        </li>
                        <li>
                            <a href="/Azienda/Visualizza/VisualizzaColtivazioni">Coltivazioni</a>
                        </li>
                        <li>
                            <a href="/Azienda/Visualizza/VisualizzaAttuatori">Attuatori</a>
                        </li>
                    </ul>
                </span>
            </aside>
        </div>

        <div class="col-md-8">
            <div class="content">
                @if (Model.campo != null)
                {
                    <h2>Dettagli campo</h2>
                    <p>Nome campo: @Model.campo.nome</p>
                }
            </div>
            <div class="elements">
                <div class="bottone-aggiungi">
                    <a asp-page="/Azienda/Crea/CreaColtivazione" asp-route-campoId="@Model.campo.id" class="plus-icon">+</a>
                    <a asp-page="/Azienda/Crea/CreaColtivazione" asp-route-campoId="@Model.campo.id">Aggiungi coltivazione</a>
                </div>
                @if (Model.campo.coltivazioni.Count > 0)
                {
                    @foreach (Coltivazione coltivazione in Model.campo.storicoColtivazioni())
                    {
                        <div class="elemento" onclick="this.parentNode.submit()">
                            <a asp-page="/Azienda/Visualizza/VisualizzaColtivazione" asp-route-coltivazioneId="@coltivazione.id">
                                <div class="elemento">
                                    <div class="info-elemento raccolto">Raccolto: @coltivazione.raccolto</div>
                                    <div class="info-elemento nome">Irrigazione: @coltivazione.irrigazione</div>
                                    <div class="info-elemento nome">Esigenza: @coltivazione.esigenza</div>
                                    <div class="info-elemento nome">Semina: @coltivazione.semina</div>
                                    <div class="info-elemento nome">Temperatura ideale: @coltivazione.temperatura</div>
                                    <div class="info-elemento nome">Umidit√† ideale: @coltivazione.umidita</div>
                                </div>
                            </a>
                        </div>
                    }

                    <div class="bottone-aggiungi">
                        <a asp-page="/Azienda/Crea/CreaCampo" asp-route-campagnaId="@Model.campo.id" class="plus-icon">+</a>
                        <a asp-page="/Azienda/Crea/CreaCampo" asp-route-campagnaId="@Model.campo.id">Aggiungi coltivazione</a>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-2">
        </div>
    </div>
</div>